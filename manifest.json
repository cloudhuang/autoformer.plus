{
    "manifest_version": 2,
	"default_locale": "en",
    "name": "AutoFormer+",
    "short_name": "AutoFormer+, form filler",
    "description": "__MSG_extension_description__",
    "version": "0.57",
    "homepage_url": "http://firefoxer.ru/#afp",
    "author": "Mykola Onyshchuk",
    
    "icons": {
	"48":  "autoformer-plus-48.png",
	"128": "autoformer-plus-128.png"
	},

    "background": {
        "scripts": [
            "autoformer-plus-background.js"
        ]
    },
  
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["autoformer-plus-page.js"],
		"all_frames": true
	  }
	],

    "permissions": [
        "contextMenus"
    ]
}
