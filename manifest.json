{
    "manifest_version": 2,
	"default_locale": "ru",
    "name": "AutoFormer+",
    "description": "__MSG_extension_description__",
    "version": "0.5",
    "homepage_url": "http://firefoxer.ru/#afp",
    
    "icons": {
	"48":  "autoformer-plus-48.png",
	"128": "autoformer-plus-128.png"
	},

    "background": {
        "scripts": [
            "autoformer-plus-background.js"
        ]
    },
  
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["autoformer-plus-page.js"]
	  }
	],

    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}
